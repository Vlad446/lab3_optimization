@{
    ViewData["Title"] = "Result";
}

@model ResultViewModel
<form method="get" asp-action="Report" asp-controller="Home">
    <div class="container">
        <div class="text-center">
            <h2>Решение задачи минимизации отходов от раскроя рулонных заготовок</h2><br>
            <h3>Расчетные показатели</h3>
        </div>       
        <div class="row">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Наименование показателя, ед. изм.</th>
                            <th>Величина</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Величина целевой функции, см² (суммарные отходы от раскроя, min)</td>
                            <td><input type="text" class="table-input-text border-0" asp-for="Cel" readonly></td>
                        </tr>
                   
                    </tbody>
                </table>                
                <div style="text-align: center;font-weight: bold">Количество рулонов материала, необходимое для раскроя на заготовки по j-му способу, шт</div>
                <table class="table">                    
                    <thead>
                         <tr>
                            <th>X1</th>
                            <th>X2</th>
                            <th>X3</th>
                            <th>X4</th>
                            <th>X5</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td> <input type="text" class="table-input-text border-0" asp-for="X1" id="X1" readonly></td>
                            <td> <input type="text" class="table-input-text border-0" asp-for="X2" id="X2" readonly></td>
                            <td> <input type="text" class="table-input-text border-0" asp-for="X3" id="X3" readonly></td>
                            <td> <input type="text" class="table-input-text border-0" asp-for="X4" id="X4" readonly></td>
                            <td> <input type="text" class="table-input-text border-0" asp-for="X5" id="X5" readonly></td>
                        </tr>
                    </tbody>
                </table>
                <div style="text-align: center;font-weight: bold">Величина отходов материалов по способам, см²</div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Отходы 1</th>
                            <th>Отходы 2</th>
                            <th>Отходы 3</th>
                            <th>Отходы 4</th>
                            <th>Отходы 5</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="text" class="table-input-text border-0" value="@string.Format("{0:f0}",Model.Waste1)" readonly></td>
                            <td><input type="text" class="table-input-text border-0" value="@string.Format("{0:f0}",Model.Waste2)" readonly></td>
                            <td><input type="text" class="table-input-text border-0" value="@string.Format("{0:f0}",Model.Waste3)" readonly></td>
                            <td><input type="text" class="table-input-text border-0" value="@string.Format("{0:f0}",Model.Waste4)" readonly></td>
                            <td><input type="text" class="table-input-text border-0" value="@string.Format("{0:f0}",Model.Waste5)" readonly></td>
                           
                         
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

         
                       
    </div>
    <div class="container"; style="text-align: center; max-width: 800px;">
        <canvas id='myChart'> </canvas>
    </div>
    <div style="margin-top:40px;"></div>
    <div class="row">
        <div class="col-5"></div>
                <div class="col-3">
            <a class="btn btn-primary" href="@Url.Action("Report","Home",Model.dataViewModel)">Отчет в формате PDF</a>
        </div>
        <div class="col-4"></div>
    </div>
    <input type="text" asp-for="dataViewModel.A1_Square" hidden>
    <input type="text" asp-for="dataViewModel.A1_1" hidden>
    <input type="text" asp-for="dataViewModel.A1_2" hidden>

                                 
    <input type="text" asp-for="dataViewModel.A1_3" hidden>
    <input type="text" asp-for="dataViewModel.A1_5" hidden>
    <input type="text" asp-for="dataViewModel.A1_AmountOn1" hidden>

    <input type="text" asp-for="dataViewModel.A2_Square" hidden>
    <input type="text" asp-for="dataViewModel.A2_1" hidden>
    <input type="text" asp-for="dataViewModel.A2_2" hidden>
    <input type="text" asp-for="dataViewModel.A2_3" hidden>
    <input type="text" asp-for="dataViewModel.A2_4" hidden>
    <input type="text" asp-for="dataViewModel.A2_5" hidden>
    <input type="text" asp-for="dataViewModel.A2_AmountOn1" hidden>

    <input type="text" asp-for="dataViewModel.A3_Square" hidden>
    <input type="text" asp-for="dataViewModel.A3_1" hidden>
    <input type="text" asp-for="dataViewModel.A3_2" hidden>
    <input type="text" asp-for="dataViewModel.A3_3" hidden>
    <input type="text" asp-for="dataViewModel.A3_4" hidden>
    <input type="text" asp-for="dataViewModel.A3_5" hidden>
    <input type="text" asp-for="dataViewModel.A3_AmountOn1" hidden>


    <input type="text" asp-for="dataViewModel.F" hidden />
    <input type="text" asp-for="dataViewModel.R" hidden />
</form>